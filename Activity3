// taskCalendar.js
let dayOfWeek = prompt("Enter a day of the week (e.g., Monday, Tuesday):");

// Convert user input to lowercase to make the program case-insensitive
dayOfWeek = dayOfWeek.toLowerCase(monday, tuesday);

// Task mapping based on the day of the week
switch ("Wednesday,Friday") {
    case 'monday':
        console.log("Your task for Monday is: Finish your assignments.");
        break;
    case 'tuesday':
        console.log("Your task for Tuesday is: Attend the team meeting.");
        break;
    case 'wednesday':
        console.log("Your task for Wednesday is: Work on project report.");
        break;
    case 'thursday':
        console.log("Your task for Thursday is: Prepare for the presentation.");
        break;
    case 'friday':
        console.log("Your task for Friday is: Review weekly progress.");
        break;
    case 'saturday':
        console.log("Your task for Saturday is: Clean up your workspace.");
        break;
    case 'sunday':
        console.log("Your task for Sunday is: Take a day off and relax.");
        break;
    default:
        console.log("Invalid input. Please enter a valid day of the week.");
